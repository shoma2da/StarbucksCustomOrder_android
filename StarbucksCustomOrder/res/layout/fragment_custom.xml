<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:layout_marginTop="10dip"
        android:layout_marginBottom="10dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >
        <ImageView
            android:id="@+id/ImageCoffee"
            android:src="@drawable/cafeamericano"
            android:contentDescription="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            />
        <TextView
            android:layout_alignLeft="@id/ImageCoffee"
            android:layout_alignRight="@id/ImageCoffee"
            android:layout_alignBottom="@id/ImageCoffee"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="#44FFFFFF"
            android:text="カフェアメリカーノ"
            android:textColor="@android:color/white"
            android:gravity="center"
            />
    </RelativeLayout>
    
    <LinearLayout
        android:layout_marginTop="10dip"
        android:layout_marginBottom="10dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:text="300kcal"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:paddingRight="10dip"
            android:paddingLeft="10dip"
            android:gravity="center"
            />
        <TextView
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:text="320円"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:paddingRight="10dip"
            android:paddingLeft="10dip"
            android:gravity="center"
            />
        <Switch
            android:id="@+id/switch1"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:paddingRight="10dip"
            android:paddingLeft="10dip"
            />
    </LinearLayout>
    
    <LinearLayout
        android:layout_marginTop="10dip"
        android:layout_marginBottom="10dip"
        android:orientation="horizontal"
        android:layout_width="300dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        >
        <ImageView
            android:src="@drawable/custom_icon_short_active"
            android:contentDescription="@null"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:src="@drawable/custom_icon_tall_active"
            android:contentDescription="@null"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:src="@drawable/custom_icon_grande_active"
            android:contentDescription="@null"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:src="@drawable/custom_icon_venti_active"
            android:contentDescription="@null"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    
    <RelativeLayout
        android:layout_marginTop="10dip"
        android:layout_width="300dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/ButtonMagic"
            android:layout_centerInParent="true"
            android:src="@drawable/custom_magic_button"
            android:contentDescription="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:id="@+id/ImageTopping"
            android:src="@drawable/custom_icon_topping"
            android:contentDescription="@null"
            android:layout_toRightOf="@id/ButtonMagic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dip"
            />
    </RelativeLayout>
    
</LinearLayout>

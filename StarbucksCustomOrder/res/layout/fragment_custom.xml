<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical" >
        
        <RelativeLayout
            android:id="@+id/LayoutImage"
            android:layout_marginTop="10dip"
            android:layout_marginBottom="10dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >
            <ImageView
                android:id="@+id/ImageCoffee"
                android:src="@drawable/cafeamericano"
                android:contentDescription="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                />
            <TextView
                android:id="@+id/TextCoffeeName"
                android:layout_alignLeft="@id/ImageCoffee"
                android:layout_alignRight="@id/ImageCoffee"
                android:layout_alignBottom="@id/ImageCoffee"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="#44FFFFFF"
                android:textColor="@android:color/white"
                android:gravity="center"
                />
        </RelativeLayout>
        
        <!-- 情報表示 -->
        <LinearLayout
            android:id="@+id/LayoutInfo"
            android:layout_marginTop="10dip"
            android:layout_marginBottom="10dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            >
            <TextView
                android:id="@+id/TextCalorie"
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:paddingRight="10dip"
                android:paddingLeft="10dip"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/TextPrice"
                android:layout_width="95dip"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:paddingRight="10dip"
                android:paddingLeft="10dip"
                android:gravity="center"
                />
            <com.koganepj.starbuckscustomorder.custom.view.TempuretureSelectView
                android:id="@+id/LayoutTempuretureSelect"
                android:layout_width="120dip"
                android:layout_height="wrap_content"
                android:paddingRight="10dip"
                android:paddingLeft="10dip"
                />
        </LinearLayout>
        
        <!-- サイズ選択 -->
        <com.koganepj.starbuckscustomorder.custom.view.SizeSelectView
            android:id="@+id/LayoutSizeSelect"
            android:layout_marginTop="10dip"
            android:layout_marginBottom="10dip"
            android:orientation="horizontal"
            android:layout_width="300dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            >
        </com.koganepj.starbuckscustomorder.custom.view.SizeSelectView>
        
        <RelativeLayout
            android:layout_marginTop="10dip"
            android:layout_width="300dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/ButtonMagic"
                android:layout_centerInParent="true"
                android:src="@drawable/custom_magic_button"
                android:contentDescription="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <ImageView
                android:id="@+id/ImageTopping"
                android:src="@drawable/custom_icon_topping"
                android:contentDescription="@null"
                android:layout_toRightOf="@id/ButtonMagic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dip"
                />
        </RelativeLayout>
    </LinearLayout>
    
    <com.koganepj.starbuckscustomorder.custom.view.CustomizeSelectView
        android:visibility="gone"
        android:id="@+id/LayoutToppingSelect"
        android:layout_marginTop="10dip"
        android:layout_width="315dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_custom_select_topping_background"
        >
        <TextView
            android:text="@string/custom_please_select_topping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="5dip"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"
            />
    </com.koganepj.starbuckscustomorder.custom.view.CustomizeSelectView>
    
</FrameLayout>
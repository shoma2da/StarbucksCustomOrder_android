<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- テーマ -->
    <style name="CustomActionBarTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="android:actionBarTabBarStyle">@style/ActionBarTabBar</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabs</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionBarTabTextStyle">@style/ActionBarTabsText</item>
    </style>
    
    <!-- アクションバー自体のスタイル -->
    <style name="ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/starbucks_green</item>
    </style>
    
    <!-- タブバーのスタイル -->
    <style name="ActionBarTabBar" parent="@android:style/Widget.Holo.Light.ActionBar.TabBar">
        <item name="android:divider">@null</item>
    </style>
    
    <!-- タブのスタイル -->
    <style name="ActionBarTabs" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@color/starbucks_green</item>
    </style>
    
    <!-- タブ文字のスタイル -->
    <style name="ActionBarTabsText">
        <item name="android:textColor">@drawable/selector_actionbar_tab_text</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>
